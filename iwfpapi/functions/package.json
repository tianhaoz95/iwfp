{
  "name": "functions",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "fix": "tslint --fix --project tsconfig.json && prettier --write ./src/**/*.ts ./test/**/*.ts ./src/*.ts ./test/*.ts",
    "build": "tsc",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "test": "jest",
    "e2e": "npm run build && firebase emulators:exec --only functions,firestore \"npm test\"",
    "emulator": "npm run build && firebase emulators:start --only firestore,functions",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "8"
  },
  "main": "lib/src/index.js",
  "dependencies": {
    "@types/sinon": "^7.5.1",
    "firebase-admin": "^8.9.0",
    "firebase-functions": "^3.0.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.25",
    "@types/node": "^13.1.0",
    "axios": "^0.19.1",
    "firebase": "^7.6.1",
    "@types/node": "^13.1.4",
    "firebase-functions-test": "^0.1.7",
    "jest": "^24.9.0",
    "jest-circus": "^24.9.0",
    "prettier": "1.19.1",
    "sinon": "^8.0.4",
    "ts-jest": "^24.2.0",
    "ts-mockito": "^2.5.0",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "typescript": "^3.7.4"
  },
  "private": true
}
