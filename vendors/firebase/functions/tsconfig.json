{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "allowJs": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "types": ["jest"],
    "target": "es2017",
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts",
    "test/**/*.test.ts",
    "src/interfaces/interfaces.js"
  ],
  "exclude": ["node_modules"]
}
